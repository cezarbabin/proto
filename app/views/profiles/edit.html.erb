<% provide(:title, "Edit user") %>


<div class="row">
  <div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-8 col-xs-offset-2">
    <%= bootstrap_form_for(@profile) do |f| %>
        <h4>Update your profile</h4>



        <%= f.text_field :education, class: 'form-control', hide_label: true, placeholder:"Education" %>

        <%= f.text_field :expertise, class: 'form-control', hide_label: true, placeholder:"Areas of expertise" %>

        <%= f.text_field :interests, class: 'form-control', hide_label: true, placeholder:"Research interests" %>

        <%= f.text_field :skills, class: 'form-control', hide_label: true, placeholder:"Skills" %>



        <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>