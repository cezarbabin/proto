<% provide(:title, "Edit user") %>


<div class="row">
  <div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-8 col-xs-offset-2">

    <% if @nr_of_people > 1 %>
      <div class="alert alert-info">
      <%= @nr_of_people %> people think you are one the smartest people they met at UPenn.
      </div>
    <% end %>

    <%= bootstrap_form_for(@profile) do |f| %>
        <h4>Update your profile</h4>


        <%= f.text_field :education, class: 'form-control',  label:"Education" %>

        <%= f.text_field :expertise, class: 'form-control', label:"Areas of expertise" %>

        <%= f.text_field :interests, class: 'form-control', label:"Research interests" %>

        <%= f.text_field :skills, class: 'form-control',  label:"Skills" %>



        <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>