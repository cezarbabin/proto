<% provide(:title, "Log in") %>


<div class ="row">
  <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-6 col-xs-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
        <h3>Log in</h3>

        <form>

          <label>
        <%= f.email_field :email, class: 'form-control', hide_label: true %>
          </label>
          <div class="label-text" > Email </div>

          <label>
        <%= f.password_field :password, class: 'form-control', hide_label: true %>
          </label>
          <div class="label-text" > Password </div>

        <%= link_to "(forgot password)", new_password_reset_path, style:"font-size:12px" %>

          <label>
        <%= f.submit "Log in", class: "custom-btn" %>
          </label>
          </form>
    <% end %>

  </div>
</div>

