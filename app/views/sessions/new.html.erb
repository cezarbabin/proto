<% provide(:title, "Log in") %>


<div class="row">
  <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-6 col-xs-offset-3">
    <%= bootstrap_form_for(:session, url: login_path) do |f| %>
        <h3>Log in</h3>

        <% flash.each do |message_type, message| %>
            <div class="alert alert-<%= message_type %>"><%= message %>, try again.</div>
        <% end %>
        <%= f.email_field :email, class: 'form-control', hide_label: true, placeholder:"Email" %>

        <%= f.password_field :password, class: 'form-control', hide_label: true, placeholder:"Password" %>

        <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>

