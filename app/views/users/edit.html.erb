<% provide(:title, "Edit user") %>


<div class="row">
  <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-6 col-xs-offset-3">
    <%= form_for(@user) do |f| %>
        <div class="form-errors">
          <%= @user.errors.full_messages.first if @user.errors.any? %>

        </div>


        <div class="form-title">
          Update your account
          </div>

        <form>
        <label>

        <%= f.text_field :first, class: 'form-control' %>
          <div class="label-text" > First Name </div>
          </label>

          <label>
        <%= f.text_field :last, class: 'form-control' %>
          <div class="label-text" > Last Name </div>
          </label>

          <label>

        <%= f.email_field :email, class: 'form-control' %>
          <div class="label-text" > Email </div>
          </label>

          <label>
        <%= f.password_field :password, class: 'form-control' %>
          <div class="label-text" > Password  </div>
          </label>

          <label>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
          <div class="label-text" > Password Confirmation</div>
          </label>

        <%= f.submit "Save changes", class: "custom-btn" %>

        </form>
    <% end %>

  </div>
</div>