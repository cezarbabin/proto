<% provide(:title, 'Sign up') %>


<div class="row">
  <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-6 col-xs-offset-3">

    <%= form_for(@user) do |f| %>
        <h3>Sign up </h3>

        <div id="explanation">
          (you need a <a link="#">valid</a> .edu email address)
        </div>


        <div class="form-errors">
          <%= @user.errors.full_messages.first if @user.errors.any? %>

        </div>


        <!-- %= f.error_summary % % -->

        <form>

          <label>

        <%= f.text_field :first_name, hide_label: true, onclick:"var x = document.getElementsByClassName('form-group')[0];
        x.className = 'form-group'; x.getElementsByClassName('help-block')[0].remove();",
                          value: nil%>
          </label>
          <div class="label-text" > First Name </div>

        <label>
        <%= f.text_field :last_name, hide_label: true,
                         onclick:"var x = document.getElementsByClassName('form-group')[1];
        x.className = 'form-group'; x.getElementsByClassName('help-block')[0].remove();",
                          value: nil %>

          </label>
          <div class="label-text" > Last Name </div>


        <label>
        <%= f.email_field :email, onclick:"var x = document.getElementsByClassName('form-group')[2];
        x.className = 'form-group'; x.getElementsByClassName('help-block')[0].remove();",
                          hide_label: true, value: nil %>
        </label>
          <div class="label-text" > Email </div>

          <label>
        <%= f.password_field :password, hide_label: true, placeholder:"Needs digits, lowercase and uppercase letters", style:'font-size:12px;',
                             onclick:"var x = document.getElementsByClassName('form-group')[3];
        x.className = 'form-group'; x.getElementsByClassName('help-block')[0].remove();",
                             value: nil %>
          </label>
          <div class="label-text" > Password </div>


          <label>
        <%= f.password_field :password_confirmation, hide_label: true, value: nil, style:'font-size:12px;' %>
          </label>
          <div class="label-text" > Confirm Password </div>

        <%= f.submit "Create my account", class: "custom-btn" %>



    <% end %>
  </div>
</div>