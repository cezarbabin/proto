<% provide(:title, 'Reset password') %>
<div class="form-title">
  Reset password
</div>



<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
        <div class="form-errors">
          <%= @friend.errors.full_messages.first if @friend.errors.any? %>
        </div>


        <%= hidden_field_tag :email, @user.email %>

        <form>
          <label>
        <%= f.password_field :password, class: 'form-control' ,placeholder:"Needs digits, lowercase and uppercase letters", style:'font-size:12px;'%>
          </label>
          <div class="label-text" > Password </div>

            <label>
        <%= f.password_field :password_confirmation, class: 'form-control',style:'font-size:12px;' %>
          </label>
          <div class="label-text" > Confirm Password </div>

        <%= f.submit "Update password", class: "custom-btn" %>
          </form>
    <% end %>
  </div>
</div>