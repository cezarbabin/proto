    <%=bootstrap_form_for(:post,:url => { :action => :create, :controller=> :posts }) do |f|  %>


        <%= f.text_field :title, hide_label: true, onclick:"var x = document.getElementsByClassName('form-group')[0];
        x.className = 'form-group'; x.getElementsByClassName('help-block')[0].remove();",
                         placeholder:"First Name", value: nil%>

        <%= f.text_area :text, rows: '5',  hide_label: true, :readonly => @var,
                        onclick:"var x = document.getElementsByClassName('form-group')[3];
        x.className = 'form-group'; x.getElementsByClassName('help-block')[0].remove();",
                        placeholder:"Phrases to describe", class: 'form-control' %>


        <%= f.submit "Post", :disabled => @var, class: "btn btn-primary" %>
    <% end %>



